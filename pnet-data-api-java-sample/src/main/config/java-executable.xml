<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>java-executable</id>

    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
            <excludes>
                <exclude>org.springframework:*</exclude>
                <exclude>org.apache.httpcomponents.client5:*</exclude>
                <exclude>commons-logging:*</exclude>
                <exclude>commons-codec:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
